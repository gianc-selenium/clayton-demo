public with sharing class MyAccountExtensionWithoutProblem5 {
    private Account a;

    public MyAccountExtensionWithoutProblem5(ApexPages.StandardController ctr) {
    }

    @AuraEnabled
    public String getName() {
        if (!Schema.sObjectType.Account.fields.Name.isAccessible()){
            return '';
        }

        a = [SELECT Name FROM Account WHERE Id=: ctr.getRecord().Id];

        return a.Name;
    }
}