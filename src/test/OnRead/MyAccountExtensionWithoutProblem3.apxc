public with sharing class MyAccountExtensionWithoutProblem3 {
    private Account a;

    public MyAccountExtensionWithoutProblem3(ApexPages.StandardController ctr) {
    }

    public String getName() {
        if (!Schema.sObjectType.Account.fields.Name.isAccessible()){
            return '';
        }
        a = [SELECT Name FROM Account WHERE Id=: ctr.getRecord().Id];
        return a.Name;
    }
}